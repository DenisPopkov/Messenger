<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="85dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/userImage"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="20dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/avatar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/ShapeAppearance.Image.PILL" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/contactName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="25dp"
        android:fontFamily="@font/roboto_medium"
        android:textColor="@color/blackColor"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/userImage"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/whoSend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="2dp"
        android:textSize="14sp"
        android:textColor="@color/darkerText"
        app:layout_constraintStart_toEndOf="@+id/userImage"
        app:layout_constraintTop_toBottomOf="@+id/contactName" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/lastMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="2dp"
        android:fontFamily="@font/roboto"
        android:textColor="@color/lightText"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/whoSend"
        app:layout_constraintTop_toBottomOf="@+id/contactName" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/timeSend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="2dp"
        android:textColor="@color/darkerText"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/lastMessage"
        app:layout_constraintTop_toBottomOf="@+id/contactName" />

    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="13dp"
        android:layout_height="13dp"
        android:layout_marginEnd="25dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@color/mainColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/ShapeAppearance.Image.PILL" />

</androidx.constraintlayout.widget.ConstraintLayout>